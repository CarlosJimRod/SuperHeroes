<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_super_heore"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        tools:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/name_super_heroe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_super_heore"
        app:layout_constraintTop_toTopOf="@id/image_super_heore"
        tools:text="NONE"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/description_super_heroe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_super_heore"
        app:layout_constraintTop_toBottomOf="@id/name_super_heroe"
        tools:text="NONE"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/work_super_heroe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_super_heore"
        app:layout_constraintBottom_toBottomOf="@id/image_super_heore"
        tools:text="NONE"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:textSize="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>